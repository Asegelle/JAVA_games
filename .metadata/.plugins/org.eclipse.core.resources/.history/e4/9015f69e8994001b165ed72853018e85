	// constructeurs
	public Grid (String[][] Grid, String []ord, String[] abs) {
		this.Grid=Grid;
		this.abs=abs;
		this.ord=ord;
	}
	
	
	
	// méthodes de classe
	public String graphGrid(
			String [][]g) {
		return
		" Grille Joueur                                  |   Grille Ennemi                                  "+abs[0]+"   "+abs[1]+"   "+abs[2]+"   "+abs[3]+"   "+abs[4]+"   "+abs[5]+"   "+abs[6]+"   "+abs[7]+"   "+abs[8]+"   "+abs[9]+"      |       "+abs[0]+"   "+abs[1]+"   "+abs[2]+"   "+abs[3]+"   "+abs[4]+"   "+abs[5]+"   "+abs[6]+"   "+abs[7]+"   "+abs[8]+"   "+abs[9]+"       --- --- --- --- --- --- --- --- --- ---     |      --- --- --- --- --- --- --- --- --- ---  "
		+ord[0]+" | "+g[0][0]+" | "+g[0][1]+" | "+g[0][2]+" | "+g[0][3]+" | "+g[0][4]+" | "+g[0][5]+" | "+g[0][6]+" | "+g[0][7]+" | "+g[0][8]+" | "+g[0][9]+" |    |   "+ORD_1+" | "+g[0][10]+" | "+g[0][11]+" | "+g[0][12]+" | "+g[0][13]+" | "+g[0][14]+" | "+g[0][15]+" | "+g[0][16]+" | "+g[0][17]+" | "+g[0][18]+" | "+g[0][19]+" | ";


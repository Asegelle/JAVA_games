	public static String[] Names(String player1,String player2,String player3,String player4,String player5) {
		String[]players=new String[5];
		players[0] = player1;
		players[1] = player2;
		players[2] = player3;
		players[3] = player4;
		players[4] = player5;
		System.out.println("player1 : "+players[0]+"player2 : "+players[1]+"player3 : "+players[2]+"player4 : "+players[3]+"player5 : "+players[4]);
		return players;
	}


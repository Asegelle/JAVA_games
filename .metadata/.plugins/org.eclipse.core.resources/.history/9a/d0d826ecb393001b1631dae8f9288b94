package bo;

public class ExoAvion {

/*
	•Exercice Avion : Fabriquer un Avion qui a comme caractéristique :
			•Un numeroSerie qui ne contient que des chiffres
			•Une compagnie
			•Un nombre de place maximum dans l'avion.
			•Tester la création d'une instance d’Avion dans un launcher
*/	
	
	
	// déclaration des variables
	
	public long SerialNumber;
	public String company;
	public int planePlaces;
	
	
	// Constructeurs
	public ExoAvion() {
		SerialNumber = 0000;
		company = "inconnue";
		planePlaces = 00;
	}
	
	public ExoAvion(long SerialNumber, String company, int planePlaces) {
		this.SerialNumber = SerialNumber;
		this.company = company;
		this.planePlaces = planePlaces;
	}
	
	// déclaration des méthodes
	
	public String planeInfos () {
		return ("Informations sur l'avion :\nNuméro de Série : "+SerialNumber +"\nCompagnie aérienne : "+company+"\nNombre de places max : "+planePlaces+"\n");
	}
	
	public String planeInfos2 (long SerialNumberParam, String companyParam, int planePlacesParam) {
		return ("Informations sur l'avion :\nNuméro de Série : "+SerialNumberParam +"\nCompagnie aérienne : "+companyParam+"\nNombre de places max : "+planePlacesParam+"\n");
	}
	
	
}

package fr.ibformation.poo.villes.exos.launcher;

import fr.ibformation.poo.villes.exos.bo.Villes;

public class LauncherExoVilles {

	/*
	Exercice Villes :
	•Création d'un objet Ville
		•nom String)
		•pays (String
		•nombre d'habitants (entier)

	•Créer 3 instances de villes
		•Honolulu, Quiberon, New York

	•Afficher les 3 villes

	•Système de catégories par rapport au nombre
	d'habitants
		•A < 1000
		•1000 < B < 10 000
		•10 000 < C < 100 000
		•100 000 < D

	•Créer une méthode pour comparer 2 objets ville par rapport au nombre d'habitants
	•Créer une méthode qui permet de dire si deux villes ont le même nom
	•Ajouter à la ville une variable monument de Type Monument
	•Chaque monument a un nom et une année de construction
	 */


	public static void main(String[] args) {

		Villes city1;										
		city1 = new Villes("Honolulu", "Etat-Unis",337256); 				

		Villes city2;										
		city2 = new Villes("Quiberon", "France",4938); 				

		Villes city3;										
		city3 = new Villes("New York","Etat Unis",8336817); 		


		// affichage du nom des 3 villes
		System.out.println(city1);
		
		
		System.out.println("1ere ville : "+
				city1.getCityName()+"\n2eme ville : "+
				city2.getCityName()+"\n3eme ville : "+
				city3.getCityName());

		// affichage de la catégorie de chaque ville en fonction du nombre d'habitants
		System.out.println("1ere ville : "+
				city1.category(city1.getCityName())+"\n2eme ville : "+
				city2.category(city2.getCityName())+"\n3eme ville : "+
				city3.category(city3.getCityName()));


		// comparaison de la taille de 2 villes
		if (city1.getPopulation()>city2.getPopulation()) {
			System.out.println("la ville de "+
					city1.getCityName()+" est plus grande que la ville "+
					city2.getCityName());
		}
		else if (city1.getPopulation()<city2.getPopulation()) {
			System.out.println("la ville de "+
					city1.getCityName()+" est plus grande que la ville "+
					city2.getCityName());
		}
		else if (city1.getPopulation()==(city2.getPopulation())) {
			System.out.println("la ville de "+
					city1.getCityName()+" est de la même taille que la ville "+
					city2.getCityName());
		}

		// comparaison du nom de 2 villes
if ((city1.getCityName().equals(city2.getCityName()))) {
	System.out.println("les deux villes "+city1.getCityName()+" et "+city2.getCityName()+" ont le même nom !");
}
else {
	System.out.println("les deux villes "+city1.getCityName()+" et "+city2.getCityName()+" n'ont pas le même nom");
}




	}

}

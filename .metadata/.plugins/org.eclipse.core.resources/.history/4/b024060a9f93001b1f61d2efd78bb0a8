package bo;

public class ExoAvion {

/*
	•Exercice Avion : Fabriquer un Avion qui a comme caractéristique :
			•Un numeroSerie qui ne contient que des chiffres
			•Une compagnie
			•Un nombre de place maximum dans l'avion.
			•Tester la création d'une instance d’Avion dans un launcher
*/	
	
	
	// déclaration des variables
	
	public long SerialNumber;
	public String company;
	public int planePlaces;
	
	
	// Constructeurs
	public ExoAvion() {
		company = "inconnue";
	}
	
	public ExoAvion(int plane, long SerialNumberParam, String companyParam, int planePlacesParam) {
		SerialNumber = SerialNumberParam;
		company = companyParam;
		planePlaces = planePlacesParam;
	}
	
	// déclaration des méthodes
	
	public String planeInfos (int plane) {
		return ("Informations sur l'avion "+plane+" :\nNuméro de Série : "+SerialNumber +"\nCompagnie aérienne : "+company+"\nNombre de places max : "+planePlaces+"\n");
	}
	
	public String planeInfos2 (int plane, long SerialNumberParam, String companyParam, int planePlacesParam) {
		return ("Informations sur l'avion "+plane+" :\nNuméro de Série : "+SerialNumberParam +"\nCompagnie aérienne : "+companyParam+"\nNombre de places max : "+planePlacesParam+"\n");
	}
	
	
}

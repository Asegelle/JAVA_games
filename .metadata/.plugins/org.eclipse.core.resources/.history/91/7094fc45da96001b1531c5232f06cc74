package fr.ibformation.todolist.Launcher;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import fr.ibformation.todolist.bo.Courses;

public class LauncherTodolist {


	// ------------------------------ variables globales -----------------------------------------------------------

	public static Scanner scanner = new Scanner(System.in);
	public static boolean isEnd = false;

	public static final String SHOW = "Afficher la liste des éléments";
	public static final String ADD = "Ajouter un élément";
	public static final String DELETE = "Supprimer un élément";
	public static final String SET = "Modifier un élément";
	public static final String LEAVE = "Quitter le programme";




	// ------------------------------ main ---------------------------------------------------------------------

	public static void main(String[] args) {


		do {	
			System.out.println("Votre action : \n"
					+ "1 - "+SHOW+"\n"
					+ "2 - "+ADD+"\n"
					+ "3 - "+DELETE+"\n"
					+ "4 - "+SET+"\n"
					+ "5 - "+LEAVE+"\n");
			int input = scanner.nextInt();
			System.out.println("vous venez de saisir : "+input+"\n");
			if (input == 1) {
				System.out.println("vous souhaitez : "+SHOW+"\n");


				Courses course1 = new Courses("banane", 2);
				System.out.println(course1);


			}
			else if (input == 2) {
				System.out.println("vous souhaitez : "+ADD+"\n");



			}
			else if (input == 3) {
				System.out.println("vous souhaitez : "+DELETE+"\n");



			}
			else if (input == 4) {
				System.out.println("vous souhaitez : "+LEAVE+"\n");



			}
			else if (input == 5) {
				isEnd = true;
				System.out.println("vous avez choisi : "+LEAVE+"\n");
				System.out.println("A bientot !");

			}
			else {
				System.out.println("vous avez fait une erreur de saisie !\n");
			}
		}
		while (!isEnd);


		//		List myList = new ArrayList();
		//		myList.add(1) = "";








	}






	// --------------------------------------------------------------------------------------------------------------
	// --------------------------------------- Fonctions ------------------------------------------------------------
	// --------------------------------------------------------------------------------------------------------------










}

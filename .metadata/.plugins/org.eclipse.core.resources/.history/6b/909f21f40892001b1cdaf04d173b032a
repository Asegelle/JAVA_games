package fr.ibformation.exos.java.se;

import java.util.Random;

public class LauncherExoBadMaximot {

	public static Random r = new Random();

		
	//---------------------------------------------------------------------------------------------------------
	// Fonction
	//---------------------------------------------------------------------------------------------------------
	
	public static String lettersOrder(String word) {
		char[] m = word.toCharArray();
		int l = m.length;
		for (int i = 0; i < l * 4; i++) {
			int p1 = r.nextInt(l);
			int p2 = r.nextInt(l);
			char temp = m[p1];
			m[p1] = m[p2];
			m[p2] = temp;
			}
		return new String(m);
		}

	//---------------------------------------------------------------------------------------------------------

	
	
	public static void main(String[] args) {
		
		String[] fruits = {"FRAISE","BANANE","ORANGE"};
		System.out.println(fruits);
		int randomIndex = r.nextInt(fruits.length);
		String mot = fruits[randomIndex];
		
		String mixLetters = lettersOrder(mot);
		System.out.println(mixLetters);}
}




package fr.ibformation.poo.exos;

import bo.ExoAvion;
import fr.ibformation.javase.bo.User;

public class LauncherExoAvion {

	public static void main(String[] args) {

/*
		•Exercice Avion : Fabriquer un Avion qui a comme caractéristique :
				•Un numeroSerie qui ne contient que des chiffres
				•Une compagnie
				•Un nombre de place maximum dans l'avion.
				•Tester la création d'une instance d’Avion dans un launcher
*/	
		
		User user; // Déclaration d'une variable objet
		user = new User(); // Affectation d'une instance d'objet de type User
		user.firstName = "Erwan"; // Affecte une valeur dans la variable FirstName de l'objet User créé plus tôt
		user.lastName = "Baccon";
		user.age = 30;
		
		
		
		ExoAvion plane1;
		plane1 = new ExoAvion(); 
		plane1.SerieNumber = 125348;
		plane1.company = "";
		plane1.planePlaces = 84;
		
		System.out.println(plane1.planeInfos());
		
		
	}

}

package fr.ibformation.poo.villes.exos.bo;

public class Ville2 {

	// déclaration des variables
	private String name;
	private String country;
	private int nbrCitizen;


	// constructors
	public Ville2 () {
		this.name = "default";
		this.country = "default";
		this.nbrCitizen = 0;
	}

	public Ville2 (String name, String country, int nbrCitizen) {
		this.name = name;
		this.country = country;
		this.nbrCitizen = nbrCitizen;
	}



	// methodes
	public String description () {
		String citydetails = 
				this.name +", "+
				this.country+", "+
				this.nbrCitizen+" habitants";

		return citydetails;
	}

	@Override
	public String toString() {
		return "Ville2 [name=" + name + ", country=" + country + ", nbrCitizen=" + nbrCitizen + "]";
	}

	// --------------------------------------------- Getters / Setters ------------------------------------



	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getCountry() {
		return country;
	}

	public void setCountry(String country) {
		this.country = country;
	}

	public int getNbrCitizen() {
		return nbrCitizen;
	}

	public void setNbrCitizen(int nbrCitizen) {
		this.nbrCitizen = nbrCitizen;
	}







}

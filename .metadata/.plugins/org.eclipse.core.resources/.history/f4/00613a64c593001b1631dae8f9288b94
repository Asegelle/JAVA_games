package fr.ibformation.poo.villes.exos.launcher;

import fr.ibformation.poo.villes.exos.bo.ExoVilles;

public class LauncherExoVilles {

	/*
	Exercice Villes :
	•Création d'un objet Ville
		•nom String)
		•pays (String
		•nombre d'habitants (entier)

	•Créer 3 instances de villes
		•Honolulu, Quiberon, New York

	•Afficher les 3 villes

	•Système de catégories par rapport au nombre
	d'habitants
		•A < 1000
		•1000 < B < 10 000
		•10 000 < C < 100 000
		•100 000 < D

	•Créer une méthode pour comparer 2 objets ville par rapport au nombre d'habitants
	•Créer une méthode qui permet de dire si deux villes ont le même nom
	•Ajouter à la ville une variable monument de Type Monument
	•Chaque monument a un nom et une année de construction
	 */


	public static void main(String[] args) {

		ExoVilles city1;										
		city1 = new ExoVilles("Honolulu"); 				
		city1.setCityName("Honolulu");
		city1.setPopulation(1500);

		ExoVilles city2;										
		city2 = new ExoVilles("Honolulu"); 				
		city2.setCityName("Quiberon");
		city2.setPopulation(50000);

		ExoVilles city3;										
		city3 = new ExoVilles("Honolulu"); 		
		city2.setPopulation(150000);
		city3.setCityName("New York");

		// affichage du nom des 3 villes
		System.out.println("1ere ville : "+city1.cityName()+"\n2eme ville : "+city2.cityName()+"\n3eme ville : "+city3.cityName());

		// affichage de la catégorie de chaque ville en fonction du nombre d'habitants
		System.out.println("1ere ville : "+
				city1.category("Honolulu")+"\n2eme ville : "+
				city2.category("Quiberon")+"\n3eme ville : "+
				city3.category("New York"));



		if (city1.getPopulation()>city2.getPopulation()) {
			System.out.println("la ville de "+city1.getPopulation()+" est plus grande que la ville"+city2.getPopulation());
		}
		else if (city1.getPopulation()<city2.getPopulation()) {
			System.out.println("la ville de "+city1.getPopulation()+" est plus grande que la ville"+city2.getPopulation());
		}
		else if (city1.getPopulation()==(city2.getPopulation())) {
			System.out.println("la ville de "+city1.getCityName()+" est de la même taille que la ville "+city2.getCityName());
		}







	}

}
